<link rel="stylesheet" href="{{'section-image-gallery-v2.css' | asset_url}}" media="print" onload="this.media='all'">

{%- liquid
  assign bg_class = ''
  assign sectionID = '#section-' | append: section.id
  assign items_spacing  = section.settings.items_padding

  assign layout = section.settings.layout
  if layout == 'boxed'
    assign layout_class = 'container'
  else
    assign layout_class = 'container-fluid'
  endif

  if items_spacing == 0
    assign items_spacing_row = 'no-padding'
  endif
-%}

<div class="section-image-gallery-v2" id="section-{{section.id}}">
  <div class="{{ layout_class }}">
    <div class="section-wrapper {{ items_spacing_row }}">

      <div class="section-body">
        <div class="image-gallery row">
          {% assign _index = forloop.index %}

          {% for block in section.blocks %}  
            {%- if block.type == 'open-column' -%}
              {% assign _index  = _index | plus: 1 %}

              {% case block.settings.width %}
                {% when '25' %}
                  {%- assign block_column_width = 'col-xl-3 col-lg-3 col-md-4 col-sm-12' -%}
                {% when '33' %}
                  {%- assign block_column_width = 'col-xl-4 col-lg-4 col-md-4 col-sm-12' -%}
                {% when '41' %}
                  {%- assign block_column_width = 'col-xl-5 col-lg-5 col-md-5 col-sm-12' -%}
                {% when '50' %}
                  {%- assign block_column_width = 'col-xl-6 col-lg-6 col-md-6 col-sm-12' -%}
                {% when '59' %}
                  {%- assign block_column_width = 'col-xl-7 col-lg-7 col-md-7 col-sm-12' -%}
                {% when '66' %}
                  {%- assign block_column_width = 'col-xl-8 col-lg-8 col-md-8 col-sm-12' -%}
                {% when '75' %}
                  {%- assign block_column_width = 'col-xl-9 col-lg-9 col-md-12 col-sm-12' -%}
                {% when '100' %}
                  {%- assign block_column_width = 'col-xl-12 col-lg-12 col-md-12 col-sm-12' -%}
              {% endcase %}

              <div class="block-column {{ block_column_width }}">
                <div class="row">
                  {% for block in section.blocks offset: _index %}
                    {%- assign _index  = _index | plus: 1 -%}

                    {%- if block.type == 'block-item' -%}
                      {%- liquid
                        assign link = block.settings.link
                        assign image = block.settings.image
                      -%}

                      {% case block.settings.width %}
                        {% when '25' %}
                          {%- assign block_width = 'col-xl-3 col-lg-3 col-md-4 col-sm-12' -%}
                        {% when '33' %}
                          {%- assign block_width = 'col-xl-4 col-lg-4 col-md-4 col-sm-12' -%}
                        {% when '41' %}
                          {%- assign block_width = 'col-xl-5 col-lg-5 col-md-5 col-sm-12' -%}
                        {% when '50' %}
                          {%- assign block_width = 'col-xl-6 col-lg-6 col-md-6 col-sm-12' -%}
                        {% when '59' %}
                          {%- assign block_width = 'col-xl-7 col-lg-7 col-md-7 col-sm-12' -%}
                        {% when '66' %}
                          {%- assign block_width = 'col-xl-8 col-lg-8 col-md-8 col-sm-12' -%}
                        {% when '75' %}
                          {%- assign block_width = 'col-xl-9 col-lg-9 col-md-12 col-sm-12' -%}
                        {% when '100' %}
                          {%- assign block_width = 'col-xl-12 col-lg-12 col-md-12 col-sm-12' -%}
                      {% endcase %}

                      <div class="image-gallery_item {{ block_width }}">
                        <a href="{{ link }}">
                          {%- render 'image-style' image: image, limit: 992 -%}
                        </a>
                      </div>
                    {% else %}
                        {% break %}
                    {% endif %}
                  {%- endfor -%}
                </div>
              </div>
            {%- endif -%}
          {% endfor %}

        </div>
      </div>

    </div>
  </div>
</div>

{%- unless items_spacing == 0 -%}
  {%- assign items_spacing = items_spacing | divided_by: 2.0 -%}
  <style type="text/css">
    .section-image-gallery-v2#section-{{section.id}} .section-wrapper:not(.no-padding) .image-gallery{
      margin: -{{ items_spacing }}px;
    }
    .section-image-gallery-v2#section-{{section.id}} .section-wrapper:not(.no-padding) .image-gallery .block-column {
      padding: {{ items_spacing }}px;
    }
    .section-image-gallery-v2#section-{{section.id}} .section-wrapper:not(.no-padding) .image-gallery .row{
      margin: -{{ items_spacing }}px; 
    }
    .section-image-gallery-v2#section-{{section.id}} .section-wrapper:not(.no-padding) .image-gallery .row .image-gallery_item{
      padding: {{ items_spacing }}px;
    }
  </style>
{%- endunless -%}

{%- capture section_css -%}
  {%- render 'snippet-theme' type: 'section-style', config: section.settings, preClassID: sectionID, classID: bg_class -%}
{%- endcapture -%}

{%- style -%}{{section_css | strip | strip_newlines | remove: '  '}}{%- endstyle -%}

