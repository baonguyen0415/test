              },
              {
                "value": "33",
                "label": "33%"
              },
              {
                "value": "41",
                "label": "41%"
              },
              {
                "value": "50",
                "label": "50%"
              },
              {
                "value": "59",
                "label": "59%"
              },
              {
                "value": "66",
                "label": "66%"
              },
              {
                "value": "75",
                "label": "75%"
              },
              {
                "value": "100",
                "label": "100%"
              }
            ]
          }
        ]
      },
      {
        "type" : "block-item",
        "name" : "t:sections.common.block_item",
        "settings" : [
          {
            "type": "select",
            "id": "width",
            "label": "t:sections.common.width",
            "default": "50",
            "options": [
              {
                "value": "25",
                "label": "25%"
              },
              {
                "value": "33",
                "label": "33%"
              },
              {
                "value": "41",
                "label": "41%"
              },
              {
                "value": "50",
                "label": "50%"
              },
              {
                "value": "59",
                "label": "59%"
              },
              {
                "value": "66",
                "label": "66%"
              },
              {
                "value": "75",
                "label": "75%"
              },
              {
                "value": "100",
                "label": "100%"
              }
            ]
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "t:sections.common.image"
          },
          {
            "type": "url",
            "id": "link",
            "label": "t:sections.common.link"
          }
        ]
      },
      {
        "type" : "close-column",
        "name" : "t:sections.common.close_column",
        "settings" : [
          {
            "type": "text",
            "id": "title",
            "label": "t:sections.common.block_label",
            "default": "Close column"
          }
        ]
      }
    ],
    "presets": [
      {
        "name" : "t:sections.image-gallery-v2.name",
        "blocks" : [
          {
            "type" : "open-column"
          },
          {
            "type" : "block-item"
          },
          {
            "type" : "close-column"
          },
          {
            "type" : "open-column"
          },
          {
            "type" : "block-item"
          },
          {
