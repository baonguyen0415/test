<link rel="stylesheet" href="{{'left-column.css' | asset_url}}" media="all">

<div class="left-column-container">
  {%- for block in section.blocks -%}
    {% case block.type %}

      {%- when 'menu' -%}
        {%- include 'sidebar-snippet', type: 'menu' -%}

      {%- when 'banner' -%}
        {%- include 'sidebar-snippet', type: 'banner' -%}
  
      {%- when 'products-listing' -%}
        {%- include 'sidebar-snippet', type: 'products-listing' -%}
  
      {%- when 'service' -%}
        {%- include 'sidebar-snippet', type: 'service' -%}
  
      {%- when 'products-grid' -%}
        {%- include 'sidebar-snippet', type: 'products-grid' -%}
  
      {%- when 'blog' -%}
        {%- include 'sidebar-snippet', type: 'blog-post' -%}

    {% endcase %}
  {%- endfor -%}
</div>

