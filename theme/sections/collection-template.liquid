          },
          {
            "type": "header",
            "content": "t:sections.common.block_item"
          },
          {
            "type": "checkbox",
            "id": "enable_sb_services_2",
            "label": "t:sections.common.enable_widget",
            "default": true
          },
          {
            "type": "textarea",
            "id": "sb_services_icon_2",
            "label": "t:sections.common.svg"
          },
          {
            "type": "text",
            "id": "sb_services_title_2",
            "label": "t:sections.common.text"
          },
          {
