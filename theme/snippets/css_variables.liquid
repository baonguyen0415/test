<style id="test">
  {%- liquid
    assign font_body_base_size = settings.body_font_size
    
  -%}
  {% comment %}
  {%- liquid
    assign body_font_bold = settings.type_body_font | font_modify: 'weight', 'bold'
    assign body_font_italic = settings.type_body_font | font_modify: 'style', 'italic'
    assign body_font_bold_italic = body_font_bold | font_modify: 'style', 'italic'
  -%}
  {{ settings.type_body_font | font_face: font_display: 'swap' }}
  {{ body_font_bold | font_face: font_display: 'swap' }}
  {{ body_font_italic | font_face: font_display: 'swap' }}
  {{ body_font_bold_italic | font_face: font_display: 'swap' }}
  {{ settings.type_header_font | font_face: font_display: 'swap' }} {% endcomment %}

  :root {
    --font-body-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    --font-body-style: {{ settings.type_body_font.style }};
    --font-body-weight: {{ settings.body_font_weight | default: settings.type_body_font.weight }};

    --font-heading-family: {{ settings.type_header_font.family }}, {{ settings.type_header_font.fallback_families }};
    --font-heading-style: {{ settings.type_header_font.style }};

    --heading-size-h1: {{ settings.heading_size_1 }}px;
    --heading-size-h2: {{ settings.heading_size_2 }}px;
    --heading-size-h3: {{ settings.heading_size_3 }}px;
    --heading-size-h4: {{ settings.heading_size_4 }}px;
    --heading-size-h5: {{ settings.heading_size_5 }}px;
    --heading-size-h6: {{ settings.heading_size_6 }}px;
    --heading-1-weight: {{ settings.heading_weight_1 }};
    --heading-2-weight: {{ settings.heading_weight_2 }};
    --heading-3-weight: {{ settings.heading_weight_3 }};
    --heading-4-weight: {{ settings.heading_weight_4 }};
    --heading-5-weight: {{ settings.heading_weight_5 }};
    --heading-6-weight: {{ settings.heading_weight_6 }};
    
    --topbar-bg-color:             {{ settings.topbar_bg_color }};
    --header-backgound:            {{ settings.header_bg_color }};
    --text-header-color:           {{ settings.header_text_color }};
    --text-header-color-rgba:      {{ settings.header_text_color | color_to_rgb | remove: 'rgb(' | remove: ')' }};
    --header-text-color-hover:     {{ settings.header_text_color_hover }};
    --header-bg-mobile-color:      {{ settings.header_bg_mobile_color }};
    --bg-number-icon:              {{ settings.bg_color_number_icon }};
    --text-number-icon:            {{ settings.color_number_icon }};
  
    --nav-font-size:               {{ settings.nav_size }}px;
    --nav-sub-font-size:           {{ settings.nav_sub_size }}px;
    --nav-link-color:              {{ settings.nav_link_color }}; 
    --nav-link-hover-color:        {{ settings.nav_hover_color }};
    --nav-dropdown-background:     {{ settings.dropdown_bg_color }}; 
    --nav-dropdown-link-color:     {{ settings.dropdown_item_color }}; 
    --nav-dropdown-link-hover-color: {{ settings.dropdown_item_color_hover }};
    --border-main-nav:            {{ settings.nav_bg_nav_link_hover }};
  
    --main-color:                  {{ settings.main_color }};
    --main-color-rgba: {{ settings.main_color | color_to_rgb | remove: 'rgb(' | remove: ')' }};  
    --body-font-size: {{ font_body_base_size }};
    --body-border-color: {{ settings.main_border_color }};
    --body-bg-color: {{ settings.body_bg_color }};
    --second-bg-color: {{ settings.second_bg_color }};
    --body-color: {{ settings.body_text_color }};
    --body-color-rgba: {{ settings.body_text_color | color_to_rgb | remove: 'rgb(' | remove: ')' }};
    --body-link: {{ settings.body_link_color }};
    --body-link-hover: {{ settings.body_link_color_hover }};
    --body-color-2: {{ settings.body_text_2_color }};
      
    --text-miscellaneous: {{ settings.text_other_color }};
    
    
    --section-heading-margin: {{ settings.section_heading_margin }};
    --section-heading-cl: {{ settings.section_heading_cl }};
    --section-heading-fs: {{ settings.section_heading_fs }};
    --section-heading-fw: {{ settings.section_heading_fw }};

    --sale-lb-cl: {{ settings.sale_label_color }};
    --sale-lb-bgcl: {{ settings.sale_label_bg_color }};
    --hot-lb-cl: {{ settings.hot_label_color }};
    --hot-lb-bgcl: {{ settings.hot_label_bg_color }};
    --new-lb-cl: {{ settings.new_label_color }};
    --new-lb-bgcl: {{ settings.new_label_bg_color }};


    --btn1-fw: {{ settings.btn1_fw }};
    --btn1-cl: {{ settings.btn1_cl }};
    --btn1-bg-cl: {{ settings.btn1_bg_cl }};
    --btn1-hover-cl: {{ settings.btn1_hover_cl }};
    --btn1-hover-bg-cl: {{ settings.btn1_hover_bg_cl }};
    --btn1-border-width: {{ settings.btn1_border_width }};
    --btn1-border-cl: {{ settings.btn1_border_cl }};
    --btn1-hover-border-cl: {{ settings.btn1_hover_border_cl }};
    --btn1-radius: {{ settings.btn1_radius }};

    --btn2-fw: {{ settings.btn2_fw }};
    --btn2-cl: {{ settings.btn2_cl }};
    --btn2-bg-cl: {{ settings.btn2_bg_cl }};
    --btn2-hover-cl: {{ settings.btn2_hover_cl }};
    --btn2-hover-bg-cl: {{ settings.btn2_hover_bg_cl }};
    --btn2-border-width: {{ settings.btn2_border_width }};
    --btn2-border-cl: {{ settings.btn2_border_cl }};
    --btn2-hover-border-cl: {{ settings.btn2_hover_border_cl }};
    --btn2-radius: {{ settings.btn2_radius }};

    --input-radius: {{ settings.input_radius }};

    --price-color: {{ settings.price_color }};
    --price-compare-color: {{ settings.price_compare_color }};
    --price-sale-color: {{ settings.price_sale_color }};
    --rating-star-color: {{ settings.rating_star_color }};
    --rating-star-empty-color: {{ settings.rating_star_empty_color }};

    --footer-bg: {{ settings.footer_background_color }};
    --footer-text-cl: {{ settings.footer_text_color }};
  
    --product-card-title-cl: {{ settings.product_title_color }};
    --product-card-title-fs: {{ settings.product_card_title_fs }};
    --product-card-vendor-fs: {{ settings.product_card_vendor_fs }};
    --product-card-price-fs:  {{ settings.product_card_price_fs }};
    --product-card-price-sale-fs: {{settings.product_card_price_sale_fs}};
    --product-card-price-compare-fs: {{ settings.product_card_price_compare_fs }};

    --breadcrumb-color-1: {{ settings.breadcrumb_color_1 }};
    --breadcrumb-color-2: {{ settings.breadcrumb_color_2 }};

    --button-cart-cl: #ffffff;
    --bg-deal-section:    #e6e6e6;
    --text-deal-text:     #383838;
    --font-bold: 700;
    --gutter-xlg: 40px;
    --gutter-lg: 30px;
    --gutter-md: 25px;
    --gutter-sm: 20px;
    --gutter-xs: 15px;
    --gutter-xxs: 10px;
  }
  {%- render 'css-responsive' preClassID: ':root',
    value_1: settings.btn1_fs, property_1: '--btn1-fs'
    value_2: settings.btn2_fs, property_2: '--btn2-fs' -%}
</style>

{% comment %} compress {% endcomment %}
