<aside class="sidebar d-none d-lg-block" id="collection-sidebar-product">
  {%- for block in section.blocks -%}
    {% case block.type %}
      {%- when 'banner' -%}
        {%- include 'sidebar-snippet' type: 'banner' section: section -%}
  
      {%- when 'products-listing' -%}
        {%- include 'sidebar-snippet' type: 'products-listing' section: section -%}
  
      {%- when 'service' -%}
        {%- include 'sidebar-snippet' type: 'service' section: section -%}

    {% endcase %}
  {%- endfor -%}
</aside>